<launch>
  <!-- By default we do not overwrite the URDF. Change the following to true to change the default behavior -->
  <arg name="load_robot_description" default="false"/>

  <!-- The name of the parameter under which the URDF is loaded -->
  <arg name="robot_description" default="robot_description"/>

  <!-- Load universal robot description format (URDF) -->
  <node name="robot_state_publisher" pkg="robot_state_publisher" type="robot_state_publisher" respawn="true" output="screen">
    <param if="$(var load_robot_description)" name="$(var robot_description)" command="$(find-pkg-share xacro)/xacro --inorder '$(find-pkg-share swiftpro)/urdf/pro_model.xacro'"/>

    <!-- The semantic description that corresponds to the URDF -->
    <param name="$(var robot_description)_semantic" textfile="$(find-pkg-share pro_moveit_config)/config/swiftpro.srdf" />
  </node>
  
  <!-- Load updated joint limits (override information from URDF) -->
  <group push_ros_namespace="$(var robot_description)_planning">
    <param value="$(command 'load' )" file="$(find-pkg-share pro_moveit_config)/config/joint_limits.yaml"/>
  </group>

  <!-- Load default settings for kinematics; these settings are overridden by settings in a node's namespace -->
  <group push_ros_namespace="$(var robot_description)_kinematics">
    <param value="$(command 'load' )" file="$(find-pkg-share pro_moveit_config)/config/kinematics.yaml"/>
  </group>
  
</launch>
